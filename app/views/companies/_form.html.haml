.row.mt-3
    .col-6.bg-light.rounded-3.px-4.py-4.mx-auto
        %h2 Minha Empresa
        = simple_form_for @company do |f|
            = f.input :name, input_html: { class: 'mb-3' }
            = f.input :url, input_html: { class: 'mb-3' }
            = image_tag url_for(@company.logo), class: "company-logo mb-1" unless @company.new_record? && !@company.logo.nil?
            %br
            = f.label "Logo", class: "mb-1"
            = f.input :logo, label: false
            %hr
            = f.submit
    
